{
  "name": "@asyncapi/message-validation",
  "version": "1.0.0",
  "description": "AsyncAPI message payload validation library that validates messages against JSON Schema (Draft-07)",
  "scripts": {
    "test": "npm run build && jest --coverage",
    "test:update": "npm run test -- -u",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "babel src --out-dir lib/cjs --env-name cjs",
    "build:esm": "babel src --out-dir lib/esm --env-name esm",
    "lint": "eslint --max-warnings 0 --config ../../.eslintrc --ignore-path ../../.eslintignore .",
    "lint:fix": "eslint --max-warnings 0 --config ../../.eslintrc --ignore-path ../../.eslintignore . --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asyncapi/generator/app/message-validation"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "author": "Adi Boghawala <boghawalaadi@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@hyperjump/json-schema": "^1.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "jest": "^27.3.1",
    "jest-esm-transformer": "^1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^nimma/legacy$": "<rootDir>/../../node_modules/nimma/dist/legacy/cjs/index.js",
      "^nimma/(.*)": "<rootDir>/../../node_modules/nimma/dist/cjs/$1"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "env": {
      "cjs": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs"
            }
          ]
        ]
      },
      "esm": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": false
            }
          ]
        ]
      }
    }
  }
}